<h1 class="text-center">Login</h1>

<div id="login-errors">

</div>
<%= form_for @user_session, remote:true, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :login, class: "col-xs-offset-2 col-xs-2 control-label" %>
    <div class="col-xs-5">
      <%= f.text_field :login, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-xs-offset-2 col-xs-2 control-label" %>
    <div class="col-xs-5">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <%= f.submit "Submit", class: "center-block" %>
  </div>
<% end %>
