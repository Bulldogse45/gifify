<div class="gif-container col-lg-3 col-sm-6 col-xs-12" id="gif<%=gif.id%>">
  <%= link_to gif_path(id:gif.id), "data-toggle"=>"modal", "data-target"=>"#modal#{gif.id}" do%>
    <% if !gif.url.empty? %>
      <%= image_tag(gif.url, class:"img-responsive center-block") %>
    <% else %>
      <%= image_tag attachment_url(gif, :gif_image), class:"img-responsive center-block" %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <p class="text-center front-page-score" id="front-page-score<%=gif.id%>"> Score: <%= gif.score %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <p class="text-center front-page-tags" id="front-page-tags<%=gif.id%>"><%= gif.tag_names %> </p>
    </div>
  </div>
  <div class="modal fade" id="modal<%=gif.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title text-center" id="myModalLabel"><%= gif.title %></h4>
        </div>
        <div class="modal-body">
          <%= render :partial => "gifs/popout", locals:{gif:gif} %>
        </div>
      </div>
    </div>
  </div>
</div>
